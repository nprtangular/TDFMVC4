@model TDFMVC4.Common.Models.Cuenta

@{
    ViewBag.Title = "Table";
}

<h2>Cambiar Lugar de Nacimiento</h2>

@using (Html.BeginForm("UsuarioEditarLugarDeNacimiento", "Perfil", FormMethod.Post))
{
<div class="form-horizontal">

    @Html.ValidationSummary(true, null, new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(x => x.Usuario.LugarNacimiento, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.Usuario.LugarNacimiento, new { @htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Usuario.LugarNacimiento, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="hidden" id="Id" name="Id" value="@Model.Id" />
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Editar" class="btn btn-default" />
        </div>
    </div>

</div>
}