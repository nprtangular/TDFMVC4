@model TDFMVC4.Common.Models.Cuenta
@{
    ViewBag.Title = "PerfilEditar";
}

<h2>Editar Perfil</h2>


@using (Html.BeginForm("TableEditarChicasEnEscena", "Perfil", FormMethod.Post))
    {
        <div class="form-horizontal">

            @Html.ValidationSummary(true, null, new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(x => x.Table.ChicasEnEscena , new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(x => x.Table.ChicasEnEscena, new { @htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.Table.ChicasEnEscena, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="hidden" id="Id" name="Id" value="@Model.Id" />

                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Editar" class="btn btn-default" />
                </div>
            </div>

        </div>
    }
}


