@model TDFMVC4.Common.Models.Cuenta
@{
    ViewBag.Title = "IndexChicaPerfilEditar";
}

<h2>Editar Perfil</h2>


@if (Model.TipoUsuario == 1)
{
    using (Html.BeginForm("EditarNombreArtistico", "Perfil", FormMethod.Post))
    {
        <div class="form-horizontal">

            @Html.ValidationSummary(true, null, new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(x => x.Chica.NombreArtistico, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(x => x.Chica.NombreArtistico, new { @htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.Chica.NombreArtistico, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @*<input type="hidden" id="Id" name="Id" value="@ViewBag.Cuenta" />*@
                    <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Editar" class="btn btn-default" />
                </div>
            </div>

        </div>
    }
}
